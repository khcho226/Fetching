                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/fatching_purplesquare" />

                                <LinearLayout
