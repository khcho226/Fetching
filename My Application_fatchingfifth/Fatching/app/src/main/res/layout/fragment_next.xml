                                        android:layout_height="0dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5sp"
                                        android:layout_marginBottom="10sp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/trebucbd"
                                        android:gravity="center"
